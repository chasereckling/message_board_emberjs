<h1>{{title}}</h1>

{{#if isEditing}}
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="body">Body</label>
      {{textarea value=body id="body" class="form-control" rows="15"}}
    </div>

    <button class="btn btn-primary" {{action 'save'}}>Save</button>
  </form>
{{else}}
  <p>{{body}}</p>
  <ul>
    {{author}}, {{date}}
    <button class="btn btn-xs btn-primary" {{action 'edit'}}>Edit</button>
    <button class="btn btn-xs btn-danger" {{action 'delete'}}>delete</button>
  </ul>
{{/if}}

{{outlet}}

<br>

<h2>Answers:</h2>

{{#each answer in model.answers}}
  <p>{{answer.description}}</p>
  <ul>
    {{answer.name}}, {{answer.date}}
    <button class="btn btn-xs btn-danger" {{action 'delete'}}>delete</button>
  </ul>
{{/each}}

<p>{{#link-to 'new-answer' this class="btn btn-success"}}Answer{{/link-to}}</p>
